<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="true">

    <jmxConfigurator />

    <appender name="STDOUT_BLOCKING" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>

            <!-- 1. Start -->
            <!--<pattern>%date{ISO8601} %-5level [%-30.30logger{30}] [%-25.25thread]      %msg%n</pattern>-->

            <!-- 2. Akka Source -->
            <!--<pattern>%date{ISO8601} %-5level [%-30.30logger{30}] [%-25.25thread] [%-25.25X{akkaSource}]      %msg%n</pattern>-->

            <!-- 5. Correlation Id -->
            <pattern>%date{ISO8601} %-5level [%-30.30logger{30}] [%-25.25thread] [%-25.25X{akkaSource}]      %msg     |TAGS| %X{GAME} %n</pattern>

        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO" />

    <logger name="org.apache.camel" level="INFO" />

    <logger name = "akka.actor" level = "INFO" />

    <logger name="com.liveperson.interaction.infra.akka" level="DEBUG" />

    <logger name="com.liveperson.interaction.infra.akka.actorx" level="DEBUG" />

    <!-- 4. Message Trail -->
    <!--<logger name="com.liveperson.interaction.infra.akka.actorx.role.MessageTrailRole" level="TRACE" />-->

    <root>
        <level value="INFO" />
        <appender-ref ref="STDOUT_BLOCKING" />
    </root>

</configuration>
